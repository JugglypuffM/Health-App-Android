<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Горизонтальный контейнер для левой и правой частей -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Левая часть: заголовок и дата -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trainingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Йога"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Правая часть: продолжительность и длительность -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/trainingDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Продолжительность: 5 минут"
                android:textAlignment="textEnd"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trainingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.02.2023"
                android:textAlignment="textEnd"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Разделительная линия -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="8dp" />
</LinearLayout>